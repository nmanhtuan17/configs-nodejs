<div class=" mt-5">
    <div class="post row">
        <% posts.forEach(post=> { %>
            <div class="p-4 col-12 col-sm-6 col-md-4 col-lg-3 col-xl-3">

                <div class="card">
                    <img src="<%= post.image  %>" class="card-img-top" alt="...">


                    <div class="card-body">
                        <h5 class="card-title">
                            <%= post.name %>
                        </h5>
                        <p class="card-text">
                            <%= post.description %>
                        </p>

                    </div>
                </div>
            </div>
            <% }); %>
    </div>

</div>