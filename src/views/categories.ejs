<header>
    <%- include('./partials/header.ejs') %>
</header>
<section>
    <%- include('./partials/banner.ejs') %>
</section>
<section class="cat_product_area section_gap">
    <div class="row container mx-auto">
        <div class="col-lg-3">
            <div class="left_sidebar_area">
                <aside class="left_widgets p_filter_widgets">
                    <div class="l_w_title">
                        <h3>Product Brand</h3>
                    </div>
                    <form action="">
                        <div class="widgets_inner">
                            <ul class="list">
                                <li>
                                    <a href="#">Apple</a>
                                </li>
                                <li>
                                    <a href="#">Asus</a>
                                </li>
                                <li class="active">
                                    <a href="#">Gionee</a>
                                </li>
                                <li>
                                    <a href="#">Micromax</a>
                                </li>
                                <li>
                                    <a href="#">Samsung</a>
                                </li>
                            </ul>
                        </div>
                    </form>
                </aside>
                <aside class="left_widgets p_filter_widgets">
                    <div class="l_w_title">
                        <h3>Price Filter</h3>
                    </div>
                    <div class="widgets_inner">
                        <div class="range_item">
                            <div id="slider-range"></div>
                            <div class="">
                                <label for="amount">Price : </label>
                                <input type="text" id="amount" readonly />
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="product_top_bar">
                <div class="left_dorp row">
                    <select class="sorting">
                        <option value="1">Sắp xếp theo..</option>
                        <option value="2">Giá tăng dần</option>
                        <option value="3">Giá giảm dần</option>
                    </select>
                    <select class="show">
                        <option value="1">Show 12</option>
                        <option value="2">Show 14</option>
                        <option value="3">Show 16</option>
                    </select>
                    <% if(isLogin && user.Username=='admin' ) {%>
                        <!-- <form class="col-3" method="post" action="">
                            <button class="btn" type="submit"> Thêm sản phẩm <i class="fa-solid fa-plus"></i></button>
                        </form> -->
                        <a class="col-3 btn" href="/admin/create">Thêm sản phẩm <i class="fa-solid fa-plus"></i></a>
                        <% } %>
                </div>
            </div>
            <div class="latest_product_inner">
                <div class="row">
                    <% products.forEach(product=> {%>
                        <div class="col-lg-4 col-md-6">
                            <div class="single-product">
                                <div class="product-img">
                                    <img class="card-img" src="<%= product.Image %>" alt="" />
                                    <div class="p_icon row justify-content-around flex-nowrap mx-auto"
                                        style="width: 100%;">
                                        <% if (isLogin && user.Username=='admin' ) {%>
                                            <a href="#" class="col-3">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>
                                            <a href="" class="col-3" data-toggle="modal" data-target="#delete-post"
                                                data-id="<%= product._id %>">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                            <% } else { %>
                                                <a href="#" class="col-3">
                                                    <i class="ti-eye"></i>
                                                </a>
                                                <a href="#" class="col-3">
                                                    <i class="ti-heart"></i>
                                                </a>
                                                <a href="#" class="col-3 btn-cart btn-success"
                                                    data-id="<%= product._id %>">
                                                    <i class="ti-shopping-cart"></i>
                                                </a>

                                                <% } %>

                                    </div>
                                </div>
                                <div class="product-btm">
                                    <a href="#" class="d-block">
                                        <h4>
                                            <%= product.ProductName %>
                                        </h4>
                                    </a>
                                    <div class="mt-3">
                                        <span class="mr-4">$
                                            <%= product.Price %>
                                        </span>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <%}); %>
                </div>
            </div>
        </div>
    </div>
</section>
<footer>
    <%- include('./partials/footer.ejs') %>
</footer>
<!-- Modal xóa sản phẩm -->
<div class="modal fade" id="delete-post" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn chắc chắn muốn xóa không?
            </div>
            <div class="modal-footer">
                <button id="btn-delete" type="submit" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
</div>

<form name="delete-form" method="POST">
</form>
<form name="addCart-form" method="POST"></form>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // admin delete product
        var productId
        var deleteForm = document.forms['delete-form']
        var btnDelete = document.getElementById('btn-delete')

        //  add product to cart


        var productAddCartId
        var addCartForm = document.forms['addCart-form']
        var btnAddCarts = document.querySelectorAll('.btn-cart')
        btnAddCarts.forEach((btnAddCart) => {
            btnAddCart.onclick = function () {
                productAddCartId = btnAddCart.getAttribute('data-id')
                addCartForm.action = '/user/cart/' + productAddCartId
                addCartForm.submit()
            }
        })
        $('#delete-post').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            productId = button.data('id')

        })
        btnDelete.onclick = function () {
            deleteForm.action = '/admin/delete/' + productId + '?_method=DELETE'
            deleteForm.submit()
        }








    })
</script>
<!-- end xóa sản phẩm -->